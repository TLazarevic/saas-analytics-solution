doctype html

html(lang='en')
  head
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/public/stylesheets/style.css')
  body
    h1 #{name}
    div
        div.grid.flex-start-content.board
            div.grid.flex-start-content.sortable
              each column in columns
                div.column
                  div.sortable_column
                    p.column_header #{column.name}
                      each card in column.cards
                        div.sortItem.cards
                          p #{card.name}
                  div
                      div.cards.new_card(data-bs-toggle='modal' role="button" data-bs-target=`#newCard-modal-${column.id}`) Add a card
                      .modal.hide.fade(tabindex='-1' aria-labelledby=`newCard-modal-${column.id}-label` aria-hidden='true' id=`newCard-modal-${column.id}`)
                        .modal-dialog.modal-lg
                          .modal-content
                            .modal-header
                              button.btn-close(type='button', data-dismiss='modal') &times;
                              h4.modal-title Add a card to #{column.name}
                            .modal-body
                              form.form-horizontal
                                .form-group
                                  .row
                                    label.col-sm-2.col-form-label(for='inputName') Name
                                    .col-sm-10
                                      input#inputName.normal-font-weight.pull-left(type='text', name='name', required, autocomplete='name')
                                  .row
                                    label.col-sm-2.col-form-label(for='inputDescription') Description
                                    .col-sm-10
                                      input#inputDescription.normal-font-weight.pull-left(type='text', name='name', required, autocomplete='description')
                            .modal-footer
                              button.btn.btn-default(data-dismiss='modal') Add
                              button.btn.btn-default(data-dismiss='modal') Close
              div.column.new_column
                p.column_header.new_header(data-bs-toggle='modal' role="button" data-bs-target='#newColumnModal') Add a column

    #newColumnModal.modal.hide.fade(tabindex='-1' aria-labelledby='newColumnModalLabel' aria-hidden='true')
      .modal-dialog.modal-lg
        .modal-content
          .modal-header
            button.btn-close(type='button', data-dismiss='modal') &times;
            h4.modal-title Add a column
          .modal-body
            form.form-horizontal
              .form-group
                .row
                  label.pull-left.col-sm-2.col-sm-offset-1.control-label(for='inputName') Name
                  input#inputName.normal-font-weight.pull-left(type='text', name='name', required, autocomplete='name')
                .row
                  label.pull-left.col-sm-2.col-sm-offset-1.control-label(for='inputDescription') Description
                  input#inputDescription.normal-font-weight.pull-left(type='text', name='name', required, autocomplete='description')
    
    script(src = "/public/javascripts/boards.js", type = "module")
    script(src='https://code.jquery.com/jquery-3.7.1.min.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js')
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
